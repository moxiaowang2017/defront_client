.container-no {
  width: 100%;
  background-color: white;
}

.company-title {
  font-size: 24px;
  margin-top: 12px;
  margin-left: 12px;
}

.company-center {
  text-align: center;
}

.company-button {
  background-color: #4f58a8;
  color: white;
  margin-bottom: 35rpx;
}

.company-title-label {
  font-size: 18px;
  margin-top: 20px;
  margin-left: 5px;
  padding-left: 10px;
  margin-bottom: 12px;
  border-left: 4px solid #4f58a8;
}

.flex-container {
  display: flex;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
  width: 95%;
  height: 170rpx;
  line-height: 170rpx;
  background-color: white;
  margin-top: 35rpx;
  border-radius: 5px;
}

.flex-left {
  flex: 0.5;
}

.flex-center {
  flex: 2.5;
  padding-left: 12px;
}

.flex-right {
  flex: 1.5;
  color: #ababab;
}

.flex-container image {
  height: 75rpx;
}

.my-article {
  padding: 0px calc(16px + env(safe-area-inset-right)) calc(24px + env(safe-area-inset-bottom)) calc(16px + env(safe-area-inset-left));
  font-size: 17px;
  color: rgba(0, 0, 0, 0.9);
}

.company-down-img {
  height: 22px;
  width: 22px;
  position: relative;
  top: 10rpx;
}

.button-position {
  position: absolute;
  top: 50px;
  right: 25px;
}

.weui-demo-dialog {
  display: none;
  opacity: 0;
  transition: opacity 0.3s;
}

.weui-demo-dialog_show {
  display: block;
  opacity: 1;
}

.my-dialog__hd {
  background-color: #4f58a8;
  color: white;
  padding: 20px 24px 15px;
}

.float-left{
  float: left;
}

.padding-txt{
  padding-top: 30rpx;
}
