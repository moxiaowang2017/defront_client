.container-width {
  width: 98%;
}

label[class='radio'] {
  display: block;
}

label[class='checkbox'] {
  display: block;
}

.quetsuon-title {
  margin-top: 12px;
  margin-left: 12px;
}

.quetsuon-option {
  margin-top: 12px;
  margin-left: 10px;
}

.container-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #ababab;
}

.size-center {
  text-align: center;
}

.my_title {
  text-align: left;
  background-color: #4f58a8;
  width: 100%;
  color: white;
  padding: 12rpx 12rpx;
}

.my-keywords-title {
  font-weight: 700;
  font-size: 17px;
  line-height: 1.4;
  text-align: left;
  padding: 12rpx;
}

.my-keywords {
  font-weight: 700;
  font-size: 17px;
  line-height: 1.4;
  text-align: left;
  padding: 12rpx 24px;
  color: red;
}

.finish-button {
  position: absolute;
  right: 24rpx;
  bottom: 30rpx;
  padding: 27rpx 21rpx;
  border-radius: 65rpx;
  background-color: #4f58a8;
  color: white;
}

.list-title {
  display: inline-block;
  text-align: left;
  width: 90%;
  font-weight: 700;
  color: black;
  padding: 15rpx 0;
}

.my-babel {
  font-size: 17px;
  line-height: 1.4;
  text-align: left;
  padding: 8rpx 28rpx;
  color: #ababab;
}

.weui-demo-dialog {
  display: none;
  opacity: 0;
  transition: opacity 0.3s;
}

.weui-demo-dialog_show {
  display: block;
  opacity: 1;
}
